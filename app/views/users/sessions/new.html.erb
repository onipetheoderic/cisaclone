<div class="main-menu-area">
   <%= render "home/common/main_menu" %>
</div>
<style type="text/css">
    .auth-area {
    margin-top: 100px;
  }

</style>

<div class="auth-area  ">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
              <div class="col-md-4 col-md-offset-3 ">
                <h1 class="page-title text-center">Log In</h1>

                        <%= simple_form_for(@form,  url: user_session_path) do |f| %>
                          <%= f.error_notification %>

                            <div class="input-group">
                            <%= f.input :email, required: false, autofocus: true, placeholder:' Email' %>
                            </div>
                            <div class="input-group">
                              <%= f.input :password, required: false, placeholder: 'Password' %>
                            </div>
                            <!-- < %= f.input :remember_me, as: :boolean if devise_mapping.rememberable? % > -->

                          <div class="form-actions">
                            <%= f.button :submit, "Log In", class:"btn base-bg"%>
                          </div>
                        <% end %>
                        <br>
                        <%= render "users/shared/links" %>
                        

                </div><!-- /col -->
            </div>
        </div>
    </div>
</div>
