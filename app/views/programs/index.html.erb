<p id="notice"><%= notice %></p>

<h1>Programs</h1>

<table>
  <thead>
    <tr>
      <th>Slug</th>
      <th>Title</th>
      <th>Short description</th>
      <th>Description</th>
      <th>Location</th>
      <th>Image</th>
      <th>Starts at</th>
      <th>Ends at</th>
      <th>Published</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.slug %></td>
        <td><%= program.title %></td>
        <td><%= program.short_description %></td>
        <td><%= program.description %></td>
        <td><%= program.location %></td>
        <td><%= program.image %></td>
        <td><%= program.starts_at %></td>
        <td><%= program.ends_at %></td>
        <td><%= program.published %></td>
        <td><%= program.active %></td>
        <td><%= link_to 'Show', program %></td>
        <td><%= link_to 'Edit', edit_program_path(program) %></td>
        <td><%= link_to 'Destroy', program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Program', new_program_path %>
