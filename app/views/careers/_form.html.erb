

<%= simple_form_for @career, :html => { :class => "form-horizontal career" } do |f| %>

  <% if @career.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@career.errors.count, "error") %> prohibited this career from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @career.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.input_field :title, as: :wysihtml5, :class => 'form-control' %>
     
      <%=f.full_error(:title, class: 'has-error') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.input_field :description, as: :ckeditor, :class => 'form-control' %>
     
      <%=f.full_error(:description, class: 'has-error') %>
    </div>
  </div>

  <div class="form-group">

    <div class="control-label col-lg-2">

    </div>
    <div class="col-lg-10">
      <%= f.input :published,:class => 'form-control' %>
      <%=f.full_error(:published, class: 'has-error') %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-lg-2">

    </div>
    <div class="col-lg-10">
      <%= f.input :closed, :class => 'form-control' %>
      <%=f.full_error(:closed, class: 'has-error') %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                careers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
